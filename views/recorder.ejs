<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recorder - Agendamento de equipamentos</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <style>
        body{
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        #card{
          position: absolute;
          top: 50%;
          left: 50%;
          width: 640px;
          height: 480px;
          transform: translate(-50%, -50%);
          box-shadow: 1px 1px 10px 2px rgba(20, 20, 20, 0.5);
        }
        
      </style>
</head>
<body>
    <div>Recorder - Agendamento de equipamentos</div>
    <br>
    <video src="" id="view" muted autoplay controls></video>
    <script>
        var socket = io();
        var mediaRecorder;
        var arrayBuffer = [];
        var time = 0;
        var stop = false;
        var video = document.querySelector('#view');
        navigator.getUserMedia({audio: true, video: true}, stream => {
            video.srcObject = stream;
            mediaRecorder = new MediaRecorder(stream);
            mediaRecorder.ondataavailable = e =>{
                setTimeout(() => {
                    arrayBuffer.push(e.data);
                    time += 10000;
                    if(!stop){
                        socket.emit('stream', {media: arrayBuffer, time: time});
                    }
                }, 0);
                
            }
            mediaRecorder.start(13000);
            
        }, error => {

        });
        video.onplay = function(){
            stop = false
        }
        video.onpause = function(){
            stop = true;
        }
    </script>
</body>
</html>